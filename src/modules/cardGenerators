function appendContent(htmlCode, container) {
  container.innerHTML += htmlCode;
}

function createWeeklySummaryCardPrimary () {
  let htmlCode = 
    `<div class="bg-primary text-primary-content rounded">
      <div>0in</div>
      <div>63</div>
      <div>Clouds</div>
      <div>48</div>
      <div>Mon 6/1</div>
    </div>`;

  let container = document.getElementById("weekly-summary-container");

  appendContent(htmlCode, container);
}

function createWeeklySummaryCardSecondary () {
  let htmlCode = 
    `<div class="bg-secondary text-secondary-content rounded">
      <div>0in</div>
      <div>63</div>
      <div>Clouds</div>
      <div>48</div>
      <div>Tues 6/1</div>
    </div>
  </div>`;

  let container = document.getElementById("weekly-summary-container");

  appendContent(htmlCode, container);
}

export function createWeeklySummaryCards() {
  console.log(`Intializing Weekly Summary Cards`);
  let count = 1;
  for (let i=0; i < 7; i++) {
    if (i % 2 === 0) {
      createWeeklySummaryCardPrimary();
      console.log(`Primary Card ${count} created`)

    } else { 
      createWeeklySummaryCardSecondary();
      console.log(`Secondary Card ${count} created`)
    }
    count++;
  }
}